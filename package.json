{
  "name": "tax-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "validate-env": "dotenv -e .env -- tsx src/utils/envUtils.ts",
    "dev": "npm run validate-env && next dev",
    "build": "npm run validate-env && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:utils": "jest src/utils",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push --force",
    "db:studio": "drizzle-kit studio",
    "db:seed": "dotenv -e .env -- tsx src/dal/db-seed.ts",
    "db:dangerously-hard-reset": "dotenv -e .env -- tsx src/dal/db-dangerously-hard-reset.ts && npm run db:push && npm run db:seed"
  },
